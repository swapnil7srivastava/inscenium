# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

[*.{go,proto}]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.{md,yaml,yml}]
trim_trailing_whitespace = false

[*.{json,jsonc}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sql,pgsql}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[*.dockerfile,Dockerfile*]
indent_size = 2