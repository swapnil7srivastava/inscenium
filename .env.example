# Inscenium Environment Configuration

# Python path and data directories
PYTHONPATH=.
INSCENIUM_DATA=./data
INSCENIUM_MODELS=./models
INSCENIUM_CACHE=./cache

# CUDA configuration
CUDA_ARCH=all
CUDA_VISIBLE_DEVICES=0

# Database configuration
POSTGRES_DSN=postgresql://inscenium:inscenium@localhost:5432/inscenium
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=inscenium
POSTGRES_USER=inscenium
POSTGRES_PASSWORD=inscenium

# Redis configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# API Gateway configuration
API_HOST=0.0.0.0
API_PORT=8080
API_BASE_URL=http://localhost:8080

# JWT configuration
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Airflow configuration
AIRFLOW_HOME=./airflow
AIRFLOW_DAGS_DIR=./ops/pipelines
AIRFLOW_WEBSERVER_PORT=8081

# OpenTelemetry and observability
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=inscenium
OTEL_RESOURCE_ATTRIBUTES=service.name=inscenium,service.version=1.0.0

# Kafka configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_EVENTS=inscenium-events
KAFKA_TOPIC_PLACEMENTS=inscenium-placements

# Storage configuration
S3_BUCKET=inscenium-assets
S3_REGION=us-west-2
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# CDN configuration
CDN_BASE_URL=https://cdn.inscenium.com
CLOUDFRONT_DISTRIBUTION_ID=

# ML model configuration
SAM2_MODEL_PATH=./models/sam2_large.pth
MIDAS_MODEL_PATH=./models/midas_v3_large.pth
RAFT_MODEL_PATH=./models/raft-things.pth
ENABLE_GPU_ACCELERATION=true

# Quality control thresholds
PRS_THRESHOLD_MIN=70
PRS_THRESHOLD_TARGET=85
FLICKER_THRESHOLD_MAX=0.1
OCCLUSION_VIOLATION_MAX=0.05

# Edge worker configuration
EDGE_WORKER_TIMEOUT_MS=100
WASM_MAX_MEMORY_MB=256
WEBGPU_FEATURE_LEVEL=webgpu

# Development flags
DEBUG=false
LOG_LEVEL=INFO
ENABLE_PROFILING=false
MOCK_ML_MODELS=true

# Legal and compliance
DISCLOSURE_MODE=auto
PRIVACY_CONSENT_REQUIRED=true
JURISDICTION=US

# Feature flags
FEATURE_UAOR_FUSION=true
FEATURE_SPHERICAL_HARMONICS=false
FEATURE_REAL_TIME_COMPOSITING=false